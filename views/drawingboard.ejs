<!DOCTYPE html>
<html>
<head>
<!-- Load the Paper.js library -->
<script type="text/javascript" src="../js/paper.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"type="text/javascript"></script>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">

<script type="text/javascript" src="/socket.io/socket.io.js"></script>

<script type="text/javascript" src="../jscolor/jscolor.js"></script>
<script src='../js/spectrum.js'></script>
<link rel='stylesheet' href='../css/spectrum.css' />
<!-- Define inlined PaperScript associate it with myCanvas -->
<link rel="stylesheet" type="text/css" href="../css/main.css">
<script type="text/javascript">
 
  
   $(window).load(function(){
        $('#myModal').modal({backdrop: 'static', keyboard: true});
    });
</script>
</head>

<body>

<div class="container">
  <div id='canvas' class='col-md-9'>
    <h1>Sketch Live</h1>
    <canvas id="myCanvas" height="163"></canvas>
  </div>
  <div class='col-md-3' id='chatroom'>
    <h1>Chat</h1>
    <div id='messages'></div>
    <form id='send'>
      <input id='message' class='form-control' autocomplete="off">
    </form>
  </div>
  <div class='col-md-3'>
    <h4>Users</h4>
    <div id='users'></div>
  </div>
  <div class="tools col-md-9">
    <div class="row">
      <img class='inline' id='brush' src='/img/pen.png'>
      <input type='text' id="color">
      <input class='inline' id='range' type="range" min="5" max="50" step="5" value='5' style="width:50px">
      <div class='inline'>
        <img class='inline' id='eraser' src='/img/cursor-eraser.png'>
        <button type="button" class="btn btn-danger" id="clear">Clear</button>  
      </div>
    </div>
    <div class="row">
    Preview:
    <div id="circle" class="inline"></div>
    </div>
  </div>
  <div class="col-md-3">
    <p> Created By:<a href="http://www.bryantluu.com"> Bryant Luu </a></p>
  </div>
  
  
<div class="modal fade" id='myModal'>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Time to Start Drawing!</h4>
      </div>
      <div class="modal-body">
        <label for="name" class="control-label">Please Enter Name:</label>
        <input id="name" class="form-control" type='text' autocomplete="off"></input>
      </div>
      <div class="modal-footer">
        <button type="button" id='close_modal' class="btn btn-primary" data-dismiss="modal">Enter</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

</div>
<script type="text/paperscript" canvas="myCanvas" src="../js/main.js"></script>
</body>
</html>